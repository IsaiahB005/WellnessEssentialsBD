@model LabInventory.Models.Order

<h2>Edit Order</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="id" />
    <div class="form-group">
        <label asp-for="InventoryId">Inventory</label>
        <select asp-for="InventoryId" asp-items="ViewBag.InventoryList" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Qty"></label>
        <input asp-for="Qty" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PaymentReceived"></label>
        <input asp-for="PaymentReceived" class="form-control" />
    <div class="form-group">
        <label asp-for="IsDelivered" class="control-label"></label>
        <select asp-for="IsDelivered" class="form-control">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="IsDelivered" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
