
@model LabInventory.ViewModels.InventoryViewModel;

@{
    ViewData["Title"] = "Create Inventory";
}

<h2>Create Inventory</h2>

<form asp-action="CreateInventory" method="post">
    <div class="form-group">
        <label asp-for="Inventory.Name"></label>
        <input asp-for="Inventory.Name" class="form-control" />
        <span asp-validation-for="Inventory.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Inventory.Description"></label>
        <textarea asp-for="Inventory.Description" class="form-control"></textarea>
        <span asp-validation-for="Inventory.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Inventory.Quantity"></label>
        <input asp-for="Inventory.Quantity" class="form-control" />
        <span asp-validation-for="Inventory.Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Inventory.Weight"></label>
        <input asp-for="Inventory.Weight" class="form-control" />
        <span asp-validation-for="Inventory.Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Inventory.TypeId"></label>
        <select asp-for="Inventory.TypeId" class="form-control" asp-items="Model.TypeSelectList">
            <option value="">-- Select Type --</option>
        </select>
        <span asp-validation-for="Inventory.TypeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItemBuyPrice">Buy Price</label>
        <input asp-for="ItemBuyPrice" class="form-control" />
        <span asp-validation-for="ItemBuyPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ItemSellPrice">Sell Price</label>
        <input asp-for="ItemSellPrice" class="form-control" />
        <span asp-validation-for="ItemSellPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
