@model LabInventory.ViewModels.InventoryViewModel

@{
    ViewData["Title"] = "Inventory";
}

<h1>Edit</h1>

<h4>Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Inventory.id" />
            <div class="form-group">
                <label asp-for="@Model.Inventory.Name" class="control-label"></label>
                <input asp-for="@Model.Inventory.Name" class="form-control" />
                <span asp-validation-for="@Model.Inventory.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Inventory.Description" class="control-label"></label>
                <input asp-for="@Model.Inventory.Description" class="form-control" />
                <span asp-validation-for="@Model.Inventory.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Inventory.Quantity" class="control-label"></label>
                <input asp-for="@Model.Inventory.Quantity" class="form-control" />
                <span asp-validation-for="@Model.Inventory.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Inventory.Weight" class="control-label"></label>
                <input asp-for="@Model.Inventory.Weight" class="form-control" />
                <span asp-validation-for="@Model.Inventory.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inventory.TypeId" class="control-label"></label>
                <select asp-for="Inventory.TypeId" asp-items="Model.TypeSelectList" class="form-control"></select>
                <span asp-validation-for="Inventory.TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemBuyPrice">Buy Price</label>
                <input asp-for="ItemBuyPrice" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="ItemSellPrice">Sell Price</label>
                <input asp-for="ItemSellPrice" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
